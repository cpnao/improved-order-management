%h2 Customer Tags Registration
= form_with model: @customer_tag, local: true do |f|
  = f.hidden_field :customer_id, value: @customer.id

  .field
    = f.fields_for :tag_photos, TagPhoto.new do |p|
      = p.label :tag_photo
      %br/
      = p.file_field :tag_photo, autofocus: true, autocomplete: "tag_photo"

  .field
    = f.fields_for :tag_sizes_quantities, TagSizesQuantity.new do |q|
      = q.label :tag_sizes_quantity
      %br/
      = q.collection_select(:tag_size_id, TagSize.all, :id, :tag_size)
      = q.text_field :tag_quantity, autofocus: true, autocomplete: "tag_sizes_quantity"

  .field
    = f.label :tag_name
    %br/
    = f.text_field :tag_name, autofocus: true, autocomplete: "tag_name"

  .field
    = f.label :tag_type
    %br/
    = f.text_field :tag_type, autofocus: true, autocomplete: "tag_type"

  .field
    = f.label :tag_position
    %br/
    = f.text_field :tag_position, autofocus: true, autocomplete: "tag_position"

  .field
    = f.label :brand_name_tag_cut
    %br/
    = f.select(:brand_name_tag_cut, [%w[カットしない uncut], %w[カットする cut]])

  .field
    = f.label :composition_tag_cut
    %br/
    = f.select(:composition_tag_cut, [%w[カットしない uncut], %w[カットする cut]])

  .field
    = f.label :tag_sewing_method
    %br/
    = f.collection_select(:tag_sewing_method_id, TagSewingMethod.all, :id, :tag_sewing_method_name)

  .field
    = f.fields_for :tag_notes, TagNote.new do |n|
      = n.label :tag_note
      %br/
      = n.text_area :tag_note, autofocus: true, autocomplete: "tag_note"

  .actions
    = f.submit "Submit"
