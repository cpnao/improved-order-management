.nested-fields.form-inline
  #technique
    .form-group
      -# = f.label :order_option_id, "🐤加工方法"
      = f.collection_select(:technique_id, Technique.all, :id, :technique_name)
      = f.collection_select(:progress_id, Progress.all, :id, :progress_name)
      %br/
      %br/

      %div{style: "display:inline-flex"}
        = f.label :pasteup_user_id, "　🐔指示書担当者 :"
        = f.collection_select(:pasteup_user_id, User.left_joins(:users_departments).where( users_departments: { department_id: [99, 5] }).order('department_id DESC'), :id, :user_name)
      %br/
      %div{style: "display:inline-flex"}
        = f.label :maker_id, "　🌱制作担当者 :"
        = f.collection_select(:maker_id, User.left_joins(:users_departments).where( users_departments: { department_id: [99, 10, 11, 12, 13, 14, 15, 16] }), :id, :user_name, selected: 99)

      %br/
      %br/
      = link_to_remove_association "🐤加工方法を削除❌", f